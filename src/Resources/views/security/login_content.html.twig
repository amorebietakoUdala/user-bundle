{% trans_default_domain 'user_bundle' %}

<form action="{{ path("user_security_login_check") }}" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey | trans(error.messageData, 'user') }}</div>
    {% endif %}

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

    <label for="username">{{ 'user.username'|trans }}</label>
    <input type="text" id="username" name="username" value="{{ last_username }}" required="required" autocomplete="username" />

    <label for="password">{{ 'user.password'|trans }}</label>
    <input type="password" id="password" name="password" required="required" autocomplete="current-password" />

    <label class="form-check-label" for="remember_me">{{ 'security.login.remember_me'| trans }}</label>
    <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me"/>&nbsp;

    <input type="submit" id="_submit" name="_submit" value="{{ 'btn.security.login.submit'|trans }}" />
</form>